<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.user.location.RegisterUser">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:alpha="0.4">
    </View>

    <EditText
        android:id="@+id/txt1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:hint="Username"
        android:textColorHint="@color/com_facebook_button_border_color_focused"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/txt1"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:textColorHint="@color/com_facebook_button_border_color_focused"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txt3"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/txt2"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="45dp"
        android:hint="Password"
        android:textColorHint="@color/com_facebook_button_border_color_focused"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Register" />


</RelativeLayout>
